{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/app/data/payments.db;Mode=ReadWriteCreate;Journal Mode=WAL;Cache Size=2000;Page Size=4096;Synchronous=NORMAL;"
  },
  "PaymentProcessor": {
    "DefaultUrl": "http://payment-processor-default:8080",
    "FallbackUrl": "http://payment-processor-fallback:8080",
    "TimeoutMs": 5000,
    "CircuitBreakerFailureThreshold": 5,
    "CircuitBreakerTimeoutMs": 10000
  }
}
