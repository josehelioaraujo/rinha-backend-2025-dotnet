version: '3.8'

services:
  nginx:
    image: nginx:1.25-alpine
    container_name: rinha-nginx
    volumes:
      - ./docker/nginx.conf:/etc/nginx/nginx.conf:ro
    depends_on:
      - api1
      - api2
    ports:
      - "9999:9999"
    networks:
      - backend
      - payment-processor
    deploy:
      resources:
        limits:
          cpus: "0.1"
          memory: "8MB"

  api1: &api
    image: ghcr.io/josehelioaraujo/rinha-backend-2025-dotnet:latest
    hostname: api1
    environment:
      - ASPNETCORE_ENVIRONMENT=Production
      - ASPNETCORE_URLS=http://+:8080
      - PaymentProcessors__DefaultUrl=http://payment-processor-default:8080
      - PaymentProcessors__FallbackUrl=http://payment-processor-fallback:8080
      - DatabasePath=/app/data
      - INSTANCE_ID=API-1
      - DOTNET_gcServer=1
      - DOTNET_gcConcurrent=1
      - DOTNET_GCHeapCount=2
      - DOTNET_GCLOHThreshold=100000
      - DOTNET_TieredCompilation=1
      - DOTNET_TieredPGO=1
    networks:
      - backend
      - payment-processor
    volumes:
      - rinha-data:/app/data
    deploy:
      resources:
        limits:
          cpus: "0.7"
          memory: "171MB"

  api2:
    <<: *api
    hostname: api2
    environment:
      - ASPNETCORE_ENVIRONMENT=Production
      - ASPNETCORE_URLS=http://+:8080
      - PaymentProcessors__DefaultUrl=http://payment-processor-default:8080
      - PaymentProcessors__FallbackUrl=http://payment-processor-fallback:8080
      - DatabasePath=/app/data
      - INSTANCE_ID=API-2
      - DOTNET_gcServer=1
      - DOTNET_gcConcurrent=1
      - DOTNET_GCHeapCount=2
      - DOTNET_GCLOHThreshold=100000
      - DOTNET_TieredCompilation=1
      - DOTNET_TieredPGO=1

volumes:
  rinha-data:
    driver: local

networks:
  backend:
    driver: bridge
  payment-processor:
    external: true
